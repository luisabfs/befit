<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/gradient"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <include layout="@layout/toolbar" />

    <com.example.mayar.befit.Adapter.CustomImageView
        android:id="@+id/id_icone_modalidade"
        android:layout_centerInParent="true"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_gravity="center"
        android:layout_marginTop="24dp"
        android:scaleType="centerCrop"
        app:srcCompat="@mipmap/ic_upload_foto_round"/>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/id_til_nome_modalidade"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_marginTop="16dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="161dp">

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/id_nome_modalidade"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:hint="@string/hint_nome_mod"
            android:paddingLeft="10dp" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/id_til_descricao_modalidade"
        android:layout_width="match_parent"
        android:layout_height="155dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="161dp">

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/id_descricao_modalidade"
            android:layout_width="match_parent"
            android:layout_height="138dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:background="@drawable/campos"
            android:hint="@string/hint_descricao"
            android:gravity="top"
            android:paddingLeft="10dp"
            android:paddingTop="16dp" />

    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/id_botao_alterar_modalidade"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_marginBottom="50dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/screen_border"
        android:backgroundTint="@color/colorAccent"
        android:elevation="4dp"
        android:text="Alterar"
        android:textColor="@android:color/background_light" />

</LinearLayout>
