<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="1dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        cardCornerRadius="10dp"
        cardMaxElevation="2dp"
        cardElevation="1dp"
        android:layout_margin="2dp"
        android:background="@drawable/gradient"
        android:layout_centerInParent="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFFF">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/id_icon_atividade_item"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:scaleType="centerCrop"
                android:src="@color/preta" />

            <TextView
                android:id="@+id/id_titulo_atividade_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="12dp"
                android:layout_toRightOf="@id/id_icon_atividade_item"
                android:autoSizeMaxTextSize="20sp"
                android:autoSizeMinTextSize="10sp"
                android:autoSizeTextType="uniform"
                android:text="Título Atividade"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textColor="@color/preta"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/id_endereco_atividade_item"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_below="@+id/id_titulo_atividade_item"
                android:layout_marginLeft="18dp"
                android:layout_toRightOf="@id/id_icon_atividade_item"
                android:autoSizeMaxTextSize="15sp"
                android:autoSizeMinTextSize="8sp"
                android:autoSizeTextType="uniform"
                android:text="Endereço Atividade"
                android:textColor="@color/preta" />

            <TextView
                android:id="@+id/id_data_atividade_item"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_below="@+id/id_endereco_atividade_item"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="18dp"
                android:layout_toRightOf="@id/id_icon_atividade_item"
                android:autoSizeMaxTextSize="15sp"
                android:autoSizeMinTextSize="8sp"
                android:autoSizeTextType="uniform"
                android:text="22/05/2018, "
                android:textColor="@color/preta" />

            <TextView
                android:id="@+id/id_horario_atividade_item"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_below="@+id/id_endereco_atividade_item"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="8dp"
                android:layout_toRightOf="@id/id_data_atividade_item"
                android:autoSizeMaxTextSize="15sp"
                android:autoSizeMinTextSize="8sp"
                android:autoSizeTextType="uniform"
                android:text="18:30."
                android:textColor="@color/preta" />

            <TextView
                android:id="@+id/tv_avaliacao_atividade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/id_icon_atividade_item"
                android:layout_toLeftOf="@+id/id_star"
                android:text="4,7"
                android:textAlignment="center"
                android:textColor="@color/preta"
                android:textSize="16dp" />

            <ImageView
                android:id="@+id/id_star"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/ic_star"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:textAppearance="?android:textAppearanceLarge"
                android:textColor="@color/preta" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>