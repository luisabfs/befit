<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="1dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        cardCornerRadius="10dp"
        cardMaxElevation="2dp"
        cardElevation="1dp"
        android:layout_margin="2dp"
        android:background="@drawable/gradient"
        android:layout_centerInParent="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:background="#FFFF"
            android:layout_height="match_parent">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:scaleType="centerCrop"
                android:layout_marginTop="5dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:id="@+id/id_icon_atividade_item"
                android:src="@color/preta" />

            <TextView
                android:id="@+id/id_titulo_atividade_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Título Atividade"
                android:layout_toRightOf="@id/id_icon_atividade_item"
                android:layout_marginLeft="16dp"
                android:textColor="@color/preta"
                android:layout_marginTop="12dp"
                android:textSize="18dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="10sp"
                android:autoSizeMaxTextSize="20sp"/>

            <TextView
                android:id="@+id/id_endereco_atividade_item"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="Endereço Atividade"
                android:layout_below="@+id/id_titulo_atividade_item"
                android:layout_toRightOf="@id/id_icon_atividade_item"
                android:layout_marginLeft="18dp"
                android:textColor="@color/preta"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="8sp"
                android:autoSizeMaxTextSize="15sp"/>

            <TextView
                android:id="@+id/id_data_atividade_item"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="22/05/2018, "
                android:layout_below="@+id/id_endereco_atividade_item"
                android:layout_toRightOf="@id/id_icon_atividade_item"
                android:layout_marginLeft="18dp"
                android:textColor="@color/preta"
                android:layout_marginBottom="5dp"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="8sp"
                android:autoSizeMaxTextSize="15sp"/>

            <TextView
                android:id="@+id/id_horario_atividade_item"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="18:30."
                android:layout_below="@+id/id_endereco_atividade_item"
                android:layout_toRightOf="@id/id_data_atividade_item"
                android:layout_marginLeft="8dp"
                android:textColor="@color/preta"
                android:layout_marginBottom="5dp"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="8sp"
                android:autoSizeMaxTextSize="15sp"/>
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>