<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="330dp"
        android:layout_height="50dp"
        cardCornerRadius="10dp"
        cardMaxElevation="2dp"
        cardElevation="1dp"
        android:background="@drawable/gradient"
        android:layout_centerInParent="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:background="#FFFF"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/id_nome_atributo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="12dp"
                android:autoSizeMaxTextSize="20sp"
                android:autoSizeMinTextSize="10sp"
                android:autoSizeTextType="uniform"
                android:text="Nome Modalidade"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textColor="?attr/colorPrimary"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/id_valor_atributo"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_alignBaseline="@+id/id_nome_atributo"
                android:layout_alignBottom="@+id/id_nome_atributo"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="12dp"
                android:layout_marginRight="12dp"
                android:autoSizeMaxTextSize="15sp"
                android:autoSizeMinTextSize="8sp"
                android:autoSizeTextType="uniform"
                android:text="Descrição Modalidade"
                android:textColor="@color/preta" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>