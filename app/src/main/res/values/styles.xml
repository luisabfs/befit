<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="editTextStyle">@style/EditTextStyle</item>

    </style>

    <style name="AppTheme.AppBarOverlay" parent="Theme.AppCompat.Light.Dialog.Alert" />

    <style name="AlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="Theme.AppCompat.Light.Dialog.Alert" />
    <style name="EditTextStyle" parent="@style/Widget.AppCompat.EditText">
        <item name="android:importantForAutofill" tools:ignore="NewApi">noExcludeDescendants</item>
    </style>
</resources>
